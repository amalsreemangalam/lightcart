<html>
<head>
   <title>Add Address</title>
   <link rel="stylesheet" href="/css/style.css">

   <style>
       /* style.css */
       body {
           font-family: Arial, sans-serif;
           background-color: #f4f4f4;
           margin: 0;
           display: flex;
           justify-content: center;
           align-items: center;
           height: 100vh;
       }

       .container {
           background-color: #fff;
           padding: 20px;
           border-radius: 10px;
           box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
       }

       h1 {
           text-align: center;
       }

       form {
           max-width: 500px;
           margin: auto;
       }

       label {
           font-weight: bold;
       }

       input[type="text"] {
           width: 100%;
           padding: 8px;
           margin-bottom: 10px;
           box-sizing: border-box;
           border: 1px solid #ccc;
           border-radius: 4px;
       }

       input[type="submit"] {
           background-color: #007bff;
           color: #fff;
           border: none;
           padding: 10px 20px;
           border-radius: 4px;
           cursor: pointer;
           font-size: 16px;
       }

       input[type="submit"]:hover {
           background-color: #0056b3;
       }
   </style>
</head>
<body>
   <h1>Add Address</h1>
   <form action="/checkoutaddaddress" method="post" onsubmit="return validateForm()">
       <label for="name">HouseName:</label>
       <input type="text" id="houseName" name="houseName" required><br><br>

       <label for="street">Street:</label>
       <input type="text" id="street" name="street" required><br><br>

       <label for="city">City:</label>
       <input type="text" id="city" name="city" required><br><br>

       <label for="state">State:</label>
       <input type="text" id="state" name="state" required><br><br>

       <label for="pincode">pincode:</label>
       <input type="number" id="zip" name="pincode" required><br><br>

       <input type="submit" value="Submit">
   </form>

   <script>
       function validateForm() {
           // Get input values
           var houseName = document.getElementById("houseName").value;
           var street = document.getElementById("street").value;
           var city = document.getElementById("city").value;
           var state = document.getElementById("state").value;
           var pincode = document.getElementById("zip").value;

           // Validate house name
           if (houseName.trim() == "") {
               alert("House name must be filled out");
               return false;
           }

           // Validate street
           if (street.trim() == "") {
               alert("Street must be filled out");
               return false;
           }

           // Validate city
           if (city.trim() == "") {
               alert("City must be filled out");
               return false;
           }

           // Validate state
           if (state.trim() == "") {
               alert("State must be filled out");
               return false;
           }

           // Validate pincode
           if (pincode.length != 6) {
               alert("Pincode must be exactly 6 digits");
               return false;
           }

           return true; // If all fields are valid, form will be submitted
       }
   </script>
</body>
</html>
