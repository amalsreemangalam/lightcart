                      <ul class="list-group list-group-flush">
                          <li class="list-group-item"><%= product.productdescription %></li>
                      </ul>
                      <hr>
                      <h5 class="card-text">Product Price</h5>
                      <h2 class="card-text price-pro">₹ <%= product.productprice %></h2>
