    <script>
        const xValues = ["monday", "tuesday", "wednesday", "thursday", "Friday","saturday","sunday"];
        const yValues = [55, 49, 44, 24, 15,36,33];
        const barColors = ["red", "green", "blue", "orange", "brown","yellow","blue"];
  
        new Chart("myChart", {
          type: "bar",
          data: {
            labels: xValues,
            datasets: [
              {
                backgroundColor: barColors,
                data: yValues,
              },
            ],
          },
          options: {
            legend: { display: false },
            title: {
              display: true,
              text: "World Wine Production 2018",
            },
          },
        });
      </script>
  
      <script>
      //   const labels = Utils.months({ count: 7 });
