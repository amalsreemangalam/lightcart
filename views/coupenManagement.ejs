    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        .bg-grey {
            background-color: grey;
        }

        body {
    height: 100%;
    margin: 0;
    background-image: url('https://th.bing.com/th/id/OIP.JfSoCom_PMG2HWUDFwb28gHaEo?rs=1&pid=ImgDetMain'); /* Replace with the actual path to your image */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    font-family: 'poppins'; /* Use Arial as a web-safe font, and fallback to sans-serif if not available */}

        .sidebar {
            background-color: #333;
            width: 250px;
            height: 100%;
            overflow: auto;
            position:absolute;
            padding-top: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 16px;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #ddd;
            color: black;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            margin-left: 250px;
        }

        /* Responsive layout - when the screen is less than 700px wide, make the sidebar and main content stack on top of each other */
        @media screen and (max-width: 700px) {

            .sidebar,
            .main-content {
                width: 100%;
                height: auto;
                position: relative;
                margin-left: 0;
            }
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-grey ">
        <div class="container">
            <a class="navbar-brand" href="#">LIGHT CART</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- <li class="nav-item">
                        <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i> My Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home"><i class="fas fa-user-circle"></i> Home</a>
                    </li> -->
                    <li class="nav-item">
                        <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>






    <nav class="sidebar">
        <a href="/dashboard">Dashboard</a>
        <a href="/usermanagement">User Management</a>
        <a href="/productmanagement">Product Management</a>
        <a href="/couponmanagement">Coupon Management</a>
        <a href="/categorymanagement">Category Management</a>
        <a href="/ordermanagement">Order management</a>
        <a href="/bannerManagement">BannerManagement</a>

        
        <div class="dropdown">
            <!-- <a href="#" class="dropdown-toggle" data-toggle="dropdown">Add product</a> -->
            <!-- <div class="dropdown-menu">
                <a class="dropdown-item" href="/addproduct">Add product</a>
            </div> -->
        </div>
        <a href="/admin/logout" class="border rounded py-1 px-3 nav-link d-flex align-items-center">
            <i class="fas fa-sign-out-alt m-1 me-md-2"></i>
            <p class="d-none d-md-block mb-0">Logout</p>
        </a>
    </nav>

    <div class="main-content">
       
            <table class="table ">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">coupen name </th>

                        <th scope="col">coupen code</th>

                        <th scope="col">Expiry Date</th>
                        <th scope="col">Discount Amount</th>
                        <th scope="col">Description</th>
                        <th scope="col">Minimum Purchase</th>
                        <th scope="col">edit</th>

                        <th scope="col">Delete</th>




                        <a href="/addCoupen"><button style="background-color:gray;">add new coupen</button></a>

                    </tr>
                </thead>
                <tbody>
                    <% coupen.forEach(coupen=> { %>
                        <tr>
                            <td>
                                <%= coupen._id %>
                            </td>
                            <td>
                                <%= coupen.couponName %>
                            </td>
                            <td>
                                <%= coupen.couponCode %>
                            </td>
                            <td style="color: black;"><%= coupen.expirationDate.toDateString()%></td>
                            
                            

                            <td style="color: black;"><%= coupen.discountAmount%></td>

                            <td style="color: black;"><%= coupen.description%></td>1

                            <td style="color: black;"><%= coupen.minimumpurchase%></td>


                            
                           
                            <td>
                               

                                <a href="/editcoupen/<%=coupen._id %>" class="btn btn-primary">edit</a>
                            </td>
                            <td>
                                <% if (coupen.isDeleted) { %>
                                    <a href="/unList/<%=coupen._id %>" class="btn btn-danger">List</a>
                                    <% } else{ %>
                                        <a href="/List/<%=coupen._id %>" class="btn btn-success">unList</a>
                                        <% } %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            
    </div>
</body>





</html>