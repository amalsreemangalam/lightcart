<script>
    function validateForm() {
        // Get input values
        var houseName = document.getElementById("houseName").value.trim();
        var street = document.getElementById("street").value.trim();
        var city = document.getElementById("city").value.trim();
        var state = document.getElementById("state").value.trim();
        var pincode = document.getElementById("zip").value;
 
        // Validate house name
        if (houseName === "" || /^[.\s]/.test(houseName)) {
            alert("House name must be filled out and must not start with a dot or space");
            return false;
        }
 
        // Validate street
        if (street === "" || /^[.\s]/.test(street)) {
            alert("Street must be filled out and must not start with a dot or space");
            return false;
        }
 
        // Validate city
        if (city === "" || /^[.\s]/.test(city)) {
            alert("City must be filled out and must not start with a dot or space");
            return false;
        }
 
        // Validate state
        if (state === "" || /^[.\s]/.test(state)) {
            alert("State must be filled out and must not start with a dot or space");
            return false;
        }
 
        // Validate pincode
        if (pincode.length !== 6) {
            alert("Pincode must be exactly 6 digits");
            return false;
        }
 
        return true; // If all fields are valid, the form will be submitted
    }
 </script>
 

