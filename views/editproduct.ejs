    <script>
     document.querySelector('form').addEventListener('submit', function(event) {
   const productStock = document.getElementById('productstocks').value;
   const productPrice = document.getElementById('productprice').value;

   if (productStock <= 0) {
       event.preventDefault();
       document.getElementById('productstocks').setCustomValidity('Product stock must be greater than 0');
   } else {
       document.getElementById('productstocks').setCustomValidity('');
   }

   if (productPrice < 1) {
       event.preventDefault();
       document.getElementById('productprice').setCustomValidity('Product price must be greater than or equal to 1');
   } else {
       document.getElementById('productprice').setCustomValidity('');
   }
});

