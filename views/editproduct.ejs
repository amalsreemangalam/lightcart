    <title>User Signup</title>
    <style>
        /* Reset default styles */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        /* Container for the signup form */
        .container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 20px;
        }

        /* Form styling */
        h2 {
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="tel"] {
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 16px;
        }

        button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        /* Media queries for responsiveness */
        @media (max-width: 600px) {
            .container {
                max-width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Edit product</h2>
        <form action="/editproduct/<%= allproduct._id %>" method="POST" enctype="multipart/form-data" novalidate>


            <% /* Check if productname exists, if not, use an empty string */ %>
                <label for="productname">Product Name</label>
                <input type="text" id="productname" name="productname" value="<%= allproduct.productname || '' %>"
                    required>

                <label for="productprice">Product Price</label>
                <input type="number" id="productprice" name="productprice" value="<%= allproduct.productprice || '' %>"
                    required>

                <label for="productdescription">Product Description</label>
                <input type="text" id="productdescription" name="productdescription"
                    value="<%= allproduct.productdescription || '' %>" required>

                <label for="productstocks">Product Stocks</label>
                <input type="text" id="productstocks" name="productstocks" value="<%= allproduct.productstocks || '' %>"
                    required>

                <label for="productcategory">Product Category</label>
                <input type="text" id="productcategory" name="productcategory"
                    value="<%= allproduct.productcategory || '' %>" required>

                <label for="filename">Product Image</label>
                <input type="file" id="filename" name="filename" multiple>
                <div style="display: flex;width: 100%;flex-wrap: wrap;">
                    <% allproduct.productimage.forEach(img=> { %>
                        <img src="<%= img %>" alt="product image" style="width: 100px;height: 100px;">


                        <a href="/deleteimage?productId=<%= allproduct._id %>&imageUrl=<%= img %>">

                            Delete
                        </a>



                        <% }); %>

                </div>

                <button type="submit">SAVE</button>
        </form>
    </div>
