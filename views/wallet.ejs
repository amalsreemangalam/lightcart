<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;500;900&display=swap" rel="stylesheet"> 
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
   

        .gradient-custom {
            background: linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1));
        }

        .card {
            border-radius: 10px;
        }

        .receipt-header {
            background-color: #343a40;
            color: #a8729a;
            border-radius: 10px 10px 0 0;
        }

        .receipt-header h5 {
            margin-bottom: 0;
        }

        .transaction-list {
            list-style: none;
            padding: 0;
        }

        .transaction-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 0;
        }

        .transaction-item .amount {
            font-size: 18px;
            font-weight: bold;
        }

        .transaction-item .date {
            color: #6c757d;
        }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
        }

        .footer a {
            color: white;
        }

        .flag {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">LIGHT CART</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i> My Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/"><i class="fas fa-user-circle"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Jumbotron -->

        <!-- Heading -->
       
        <!-- Heading -->
    </header>

    <section class="h-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-10 col-xl-8">
                    <div class="card">
                        <div class="card-header px-4 py-5 receipt-header">
                            <h5 class="text-muted mb-0" style="color: white;">Wallet Balance, <span style="color:white;">₹<%=walletBalance%></span>!</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <p class="lead fw-normal mb-0" style="color: #a8729a;">Transaction History</p>
                                <p class="small text-muted mb-0"></p>
                            </div>
                            <ul class="transaction-list">
                                <% transactions.reverse().forEach(transaction => { %>
                                    <li class="transaction-item">
                                        <div class="flex items-center">
                                            <% if(transaction.type == 'Refund'){ %>
                                                <span class="text-success amount">₹<%= transaction.amount.toFixed(2) %></span>
                                            <% } else { %>
                                                <span class="text-danger amount">₹<%= transaction.amount.toFixed(2) %></span>
                                            <% } %>
                                        </div>
                                        <span class="date"><%= transaction.time.toDateString() %></span>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

